<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/court_green"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 比赛管理区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="比赛管理"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/basketball_orange"
                    android:layout_marginBottom="8dp" />

                <!-- 比赛信息显示 -->
                <LinearLayout
                    android:id="@+id/layoutMatchInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvMatchName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="比赛名称：未设置"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvMatchNote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注：未设置"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvCurrentQuarter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前节次：第1节"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/home_team_color"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvQuarterScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本节比分：0 : 0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/away_team_color"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvTotalScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总比分：0 : 0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/basketball_orange"
                        android:layout_marginBottom="8dp" />

                </LinearLayout>

                <!-- 比赛控制按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnNewMatch"
                        style="@style/MatchButtonStyle"
                        android:text="新建比赛"
                        android:backgroundTint="@color/button_enabled" />

                    <Button
                        android:id="@+id/btnSaveQuarter"
                        style="@style/MatchButtonStyle"
                        android:text="保存本节"
                        android:backgroundTint="@color/basketball_orange"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnSaveMatch"
                        style="@style/MatchButtonStyle"
                        android:text="保存比赛"
                        android:backgroundTint="@color/basketball_brown"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnSyncAllScores"
                        style="@style/MatchButtonStyle"
                        android:text="同步分数"
                        android:backgroundTint="@color/basketball_blue"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- 上一节比分管理按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnViewPreviousQuarter"
                        style="@style/MatchButtonStyle"
                        android:text="查看上节"
                        android:backgroundTint="@color/basketball_blue"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnEditPreviousQuarter"
                        style="@style/MatchButtonStyle"
                        android:text="编辑上节"
                        android:backgroundTint="@color/basketball_green"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 蓝牙连接状态 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvBluetoothStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bluetooth_disconnected"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnConnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bluetooth_scan"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 比分显示区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp">

                <!-- 龙都F4 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_team"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/home_team_color"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvHomeScore"
                        style="@style/TeamScoreStyle"
                        android:text="0" />

                </LinearLayout>

                <!-- 分隔符 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="16dp" />

                <!-- 暴风队 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/away_team"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/away_team_color"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvAwayScore"
                        style="@style/TeamScoreStyle"
                        android:text="0" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 龙都F4计分按钮 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_team"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/home_team_color"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnHomePlus1"
                        style="@style/ScoreButtonStyle"
                        android:text="@string/score_plus_1"
                        android:backgroundTint="@color/home_team_color" />

                    <Button
                        android:id="@+id/btnHomePlus2"
                        style="@style/ScoreButtonStyle"
                        android:text="@string/score_plus_2"
                        android:backgroundTint="@color/home_team_color" />

                    <Button
                        android:id="@+id/btnHomePlus3"
                        style="@style/ScoreButtonStyle"
                        android:text="@string/score_plus_3"
                        android:backgroundTint="@color/home_team_color" />

                    <Button
                        android:id="@+id/btnHomeMinus1"
                        style="@style/ScoreButtonStyle"
                        android:text="@string/score_minus_1"
                        android:backgroundTint="@color/button_disabled" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 暴风队计分按钮 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/away_team"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/away_team_color"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnAwayPlus1"
                        style="@style/ScoreButtonStyle"
                        android:text="@string/score_plus_1"
                        android:backgroundTint="@color/away_team_color" />

                    <Button
                        android:id="@+id/btnAwayPlus2"
                        style="@style/ScoreButtonStyle"
                        android:text="@string/score_plus_2"
                        android:backgroundTint="@color/away_team_color" />

                    <Button
                        android:id="@+id/btnAwayPlus3"
                        style="@style/ScoreButtonStyle"
                        android:text="@string/score_plus_3"
                        android:backgroundTint="@color/away_team_color" />

                    <Button
                        android:id="@+id/btnAwayMinus1"
                        style="@style/ScoreButtonStyle"
                        android:text="@string/score_minus_1"
                        android:backgroundTint="@color/button_disabled" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 游戏控制按钮 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游戏控制"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnResetScore"
                        style="@style/GameButtonStyle"
                        android:text="@string/reset_score"
                        android:backgroundTint="@color/basketball_orange" />

                    <Button
                        android:id="@+id/btnTimeout"
                        style="@style/GameButtonStyle"
                        android:text="@string/timeout"
                        android:backgroundTint="@color/basketball_brown" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnStartTimer"
                        style="@style/GameButtonStyle"
                        android:text="@string/start_timer"
                        android:backgroundTint="@color/button_enabled" />

                    <Button
                        android:id="@+id/btnPauseTimer"
                        style="@style/GameButtonStyle"
                        android:text="@string/pause_timer"
                        android:backgroundTint="@color/button_disabled" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 节次显示 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quarter"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tvQuarter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:background="@color/score_background"
                    android:padding="8dp"
                    android:minWidth="60dp"
                    android:gravity="center" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnNextQuarter"
                    style="@style/GameButtonStyle"
                    android:text="下一节"
                    android:backgroundTint="@color/basketball_orange" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView> 