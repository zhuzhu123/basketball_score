    <color name="basketball_brown">#8B4513</color>
    <color name="basketball_green">#4CAF50</color>
    <color name="basketball_orange">#FF8C00</color>
    <color name="black">#FF000000</color>
    <color name="button_disabled">#CCCCCC</color>
    <color name="button_enabled">#4CAF50</color>
    <color name="court_green">#228B22</color>
    <color name="home_team_color">#FF0000</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="score_background">#F5F5F5</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">篮球计分遥控器</string>
    <string name="away_team">暴风队</string>
    <string name="bluetooth_connected">蓝牙已连接</string>
    <string name="bluetooth_connecting">正在连接蓝牙设备...</string>
    <string name="bluetooth_disconnected">蓝牙已断开</string>
    <string name="bluetooth_enable">启用蓝牙</string>
    <string name="bluetooth_permission_required">需要蓝牙权限才能使用此功能</string>
    <string name="bluetooth_scan">扫描蓝牙设备</string>
    <string name="connection_failed">连接失败</string>
    <string name="device_not_found">未找到指定的蓝牙设备</string>
    <string name="home_team">龙都F4</string>
    <string name="pause_timer">暂停计时</string>
